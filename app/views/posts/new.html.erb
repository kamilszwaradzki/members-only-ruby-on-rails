<%= form_with model: @post do |form| %>
  <div class="mb-3">
    <%= form.label :title, class:"form-label" %><br>
    <%= form.text_field :title, class:"form-control", placeholder: 'Fill title field' %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class:"form-label" %><br>
    <%= form.text_area :body, class:"form-control" %><br>
    <% @post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create post", class: "btn btn-primary" %>
  </div>
<% end %>
